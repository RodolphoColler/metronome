{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-trailing-spaces": "error",
        "semi": "error",
        "react/jsx-indent" : ["error", 2],
        "space-in-parens": ["error", "never"]
    }
}
